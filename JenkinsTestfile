pipeline {
    agent any

    stages {
        stage('Setup') {
            steps {
                sh 'pod install --verbose'
            }
        }
        stage('Build') {
            steps {
                script {
                    sh 'fastlane build_uat'
                }
            }
        }
        stage('Parallel Stage') {
            failFast true
            parallel {
                stage('Test') {
                    steps {
                        script {
                            sh 'fastlane unit_tests'
                            junit 'build/tests/report.junit'
                        }
                    }
                }
                stage('Swiftlint') {
                    steps {
                        script {
                            sh 'fastlane static_code_check'
                        }
                    }
                }
            }
        }
    }
}
