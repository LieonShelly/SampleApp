pipeline {
    agent any
    environment {
        // Setup Ruby to PATH
        RUBY_HOME = "/usr/local/opt/ruby"
        PATH = "$RUBY_HOME/bin:$PATH"
        LANG = "en_US.UTF-8"
    }
    stages {
        stage('Setup') {
            steps {
                sh 'gem install bundler'
                sh 'bundle install'
                sh 'bundle exec pod install --verbose'
            }
        }
        stage('Build') {
            steps {
                script {
                    sh 'bundle exec fastlane build_uat'
                }
            }
        }
        stage('Parallel Stage') {
            failFast true
            parallel {
                stage('Test') {
                    steps {
                        script {
                            sh 'bundle exec fastlane unit_tests'
                            junit 'build/tests/report.junit'
                        }
                    }
                }
                stage('Swiftlint') {
                    steps {
                        script {
                            sh 'bundle exec fastlane static_code_check'
                        }
                    }
                }
            }
        }
    }
}
